<div class="container">
  <div class="form-container">
    <h3 class="sub-title">ログイン</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <p><%= f.label :email %></p>
        <%= f.email_field :email, autocomplete: "email", class: "form-text" %>
      </div>
      <div class="field">
        <p><%= f.label :password %></p>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-text" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="check-box">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン", class: "form-btn" %>
      </div>
      <%= link_to "新規登録する", new_registration_path(resource_name),class: "form-links" %>
      <%= link_to "パスワードを忘れた方", new_password_path(resource_name),class: "form-links" %>
    <% end %>
  </div>
</div>
